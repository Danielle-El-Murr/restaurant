<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/foodNameTv"
        android:layout_width="235dp"
        android:layout_height="34dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="7dp"
        android:text="name"
        android:textColor="#FF9800"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/quantityTv"
        app:layout_constraintEnd_toStartOf="@+id/foodPriceTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foodPriceTv"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="2dp"
        android:text="price"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/deleteButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/foodNameTv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:text="QTY:"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/subQty"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTv"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/quantityTv"
        android:layout_width="25dp"
        android:layout_height="33dp"
        android:layout_marginTop="7dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/subQty"
        app:layout_constraintEnd_toStartOf="@+id/addQty"
        app:layout_constraintStart_toEndOf="@+id/subQty"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTv" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="46dp"
        android:layout_height="39dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#02FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addQty"
        app:layout_constraintTop_toBottomOf="@+id/foodPriceTv"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageButton
        android:id="@+id/addQty"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/quantityTv"
        app:layout_constraintEnd_toStartOf="@+id/deleteButton"
        app:layout_constraintStart_toEndOf="@+id/quantityTv"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTv"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/add" />

    <ImageButton
        android:id="@+id/subQty"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/quantityTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTv"
        app:srcCompat="@drawable/subtract" />

</androidx.constraintlayout.widget.ConstraintLayout>